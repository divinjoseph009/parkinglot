<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0" style="-fx-background-color: #d3d3d3ff;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.parkinglot.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
<!--    <background>-->
<!--        <Background>-->
<!--            <BackgroundFill fill="#d3d3d3ff" />-->
<!--        </Background>-->
<!--    </background>-->
    <children>
        <Label text="Please enter the date and time the car entered the parking lot">
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
        </Label>
        <TextField fx:id="entryTimeText" promptText="YYYY-MM-DD HH:mm">
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
        </TextField>
        <Label text="Please enter the date and time the car exited the parking lot">
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
        </Label>
        <TextField fx:id="exitTimeText" promptText="YYYY-MM-DD HH:mm">
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
        </TextField>
        <Button fx:id="submitButton" text="Submit">
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
            <style>
                -fx-font-size: 14px;
                -fx-background-color: #4CAF50;
                -fx-text-fill: white;
            </style>
        </Button>
        <Label text="Duration:">
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
        </Label>
        <Text fx:id="durationResult">
<!--            <padding>-->
<!--                <Insets left="10.0" right="10.0" />-->
<!--            </padding>-->
            <style>
                -fx-font-size: 14px;
                -fx-text-fill: white;
            </style>
        </Text>
        <Label text="Fee:">
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
        </Label>
        <Text fx:id="feeResult">
<!--            <padding>-->
<!--                <Insets left="10.0" right="10.0" />-->
<!--            </padding>-->
            <style>
                -fx-font-size: 14px;
                -fx-text-fill: white;
            </style>
        </Text>
    </children>
</VBox>
